@model MvcBib.Models.BoekAuteurViewModel

@{
    ViewBag.Title = "CreateVoorBoek";
}

<h2>CreateVoorBoek</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    
    <fieldset>
        <legend>Create auteur voor boek: @Model.Boek.Titel</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Auteur.Voornaam)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Auteur.Voornaam)
            @Html.ValidationMessageFor(model => model.Auteur.Voornaam)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Auteur.Familienaam)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Auteur.Familienaam)
            @Html.ValidationMessageFor(model => model.Auteur.Familienaam)
        </div>

        

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
